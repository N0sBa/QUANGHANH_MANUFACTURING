                    url: '/deleteFamily',
                    dataType: 'json',
                    data: {
                        'family_type': JSON.stringify(family_type),
                        'id': JSON.stringify(id),
                        'family_relation': JSON.stringify(family_relation)
                    },
                    success: function (response) {
                        if (response.success) {
                            $("#family-table").empty();
                            for (i = 0; i < response.listQH.length; i++) {
                                $("#family-table").append("<tr>");

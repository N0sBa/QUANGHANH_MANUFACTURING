<script>
    function xoaQuanHe(family_type, id, family_relation) {
        confirmAlert("Xác nhận xóa?", "",
            function () {
                $("#pre-load").show("slow", function () {
                });
                $("#pre-load").css("z-index", "99999");
                $.ajax({

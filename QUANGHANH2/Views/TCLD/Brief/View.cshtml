                                $("#family-table").append("<td class='center'>" + response.listQH[i].family_relationship_id + "</td>");
                                $("#family-table").append("<td class='center'>" + response.listQH[i].background + "</td>");
                                $("#family-table").append("<td class='center'><a class='waves-effect waves-light btn blue darken-2 btn-small modal-trigger' data-target='delFamily' onclick='xoaQuanHe(" + response.listQH[i].family_type_id + "," + response.listQH[i].employee_id + "," + response.listQH[i].family_relationship_id + ")'>Xóa</a></td>");
